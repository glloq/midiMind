# ============================================================================
# MidiMind v3.0 - Environment Variables
# ============================================================================
# Copy this file to .env and customize as needed

# Application
MIDIMIND_BASE_PATH=/home/pi/MidiMind
MIDIMIND_CONFIG_PATH=/home/pi/MidiMind/config/config.json

# Logging
MIDIMIND_LOG_LEVEL=INFO
MIDIMIND_LOG_FILE=/home/pi/MidiMind/logs/midimind.log

# API
MIDIMIND_API_PORT=8080
MIDIMIND_API_HOST=0.0.0.0

# Network
MIDIMIND_RTPMIDI_PORT=5004
MIDIMIND_MDNS_ENABLED=true

# Database
MIDIMIND_DB_PATH=/home/pi/MidiMind/data/midimind.db

# MIDI
MIDIMIND_MIDI_CLOCK_ENABLED=false
MIDIMIND_MIDI_CLOCK_TEMPO=120.0

# Optimization
MIDIMIND_THREAD_POOL_SIZE=4
MIDIMIND_MEMORY_POOL_ENABLED=true

# Debug
MIDIMIND_DEBUG=false
MIDIMIND_VERBOSE_MIDI=false