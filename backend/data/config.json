{
    "application": {
        "version": "4.1.2",
        "name": "MidiMind",
        "data_dir": "/opt/midimind/data",
        "log_dir": "/var/log/midimind"
    },
    "api": {
        "port": 8080,
        "host": "0.0.0.0",
        "max_connections": 10,
        "timeout_ms": 30000
    },
    "midi": {
        "buffer_size": 256,
        "sample_rate": 44100,
        "max_devices": 32,
        "alsa_client_name": "MidiMind",
        "hot_plug_scan_interval": 2000,
        "default_device": "auto"
    },
    "timing": {
        "latency_compensation": true,
        "auto_calibration": true,
        "calibration_duration_ms": 5000,
        "calibration_iterations": 100,
        "max_jitter_ms": 5.0,
        "default_compensation": 0,
        "enable_instrument_compensation": true
    },
    "storage": {
        "database_path": "/opt/midimind/data/midimind.db",
        "auto_backup": true,
        "backup_interval_hours": 24,
        "max_backups": 7,
        "root": "/opt/midimind",
        "max_file_size": 10485760
    },
    "logging": {
        "level": "info",
        "file_enabled": true,
        "console_enabled": true,
        "max_file_size_mb": 10,
        "max_files": 5,
        "file": "/var/log/midimind/backend.log",
        "rotation": 5
    }
}
